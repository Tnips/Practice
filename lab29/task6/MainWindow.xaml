<Window x:Class="task6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:task6"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Canvas x:Name="ClockCanvas" Width="200" Height="200" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Ellipse Width="200" Height="200" Stroke="Black" StrokeThickness="2"/>
            <Rectangle x:Name="SecondHand" Width="2" Height="90" Fill="Red" RenderTransformOrigin="0.5,0.9">
                <Rectangle.RenderTransform>
                    <RotateTransform x:Name="SecondHandTransform" Angle="0"/>
                </Rectangle.RenderTransform>
            </Rectangle>
        </Canvas>
    </Grid>
</Window>
